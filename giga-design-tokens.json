    "dark": {
      "text": { "primary":"grey.50","secondary":"grey.400" },
      "icon": { "primary":"grey.50","secondary":"grey.400" },
      "status": { "connected":"green.600","notConnected":"red.base" },
      "background": { "main":"grey.950" },
      "border": { "default":"grey.800","light":"grey.900" },
      "button": { "primary":{"fill":"primary.600","hover":"primary.700","text":"white"},"secondary":{"outline":"primary.600","hover":"primary.700"} },
      "link": { "primary":"primary.600" }
    }
  },
  "borderRadius": { "card-sm":"6px","card-lg":"8px","badge":"4px","button-sm":"4px","button":"6px","button-pill":"9999px","input":"6px" },
  "shadows": { "_hoverRule":"All interactive elements go UP one shadow step on hover" },
  "motion": { "medium-large":{"stiffness":180,"damping":30,"duration":"400ms"},"small":{"stiffness":720,"damping":60,"duration":"200ms"} },
  "typography": {
    "fontFamilies": { "heading":"Manrope","body":"Open Sans" },
