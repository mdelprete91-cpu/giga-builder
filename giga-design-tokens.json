    "parameters": {
      "base": "radix",
      "style": "nova",
      "baseColor": "gray",
      "theme": "blue",
      "iconLibrary": "tabler",
      "font": "inter",
      "menuAccent": "subtle",
      "menuColor": "default",
      "radius": "default",
      "template": "next",
      "rtl": false
    },
    "gigaOverrides": {
      "font": "Manrope + Open Sans via giga-globals.css and tailwind.config",
      "radius": "Keep shadcn preset radius (no Giga override)"
