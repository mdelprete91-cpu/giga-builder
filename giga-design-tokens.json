{
  "description": "Giga Product Design System â€” Complete tokens (Figma + UI Design Rules)",
  "stack": "Next.js + React + Tailwind CSS + shadcn/ui (vanilla)",
  "shadcnPreset": {
    "initUrl": "https://ui.shadcn.com/init?base=radix&style=nova&baseColor=gray&theme=blue&iconLibrary=tabler&font=inter&menuAccent=subtle&menuColor=default&radius=default&template=next&rtl=false",
    "createCommand": "npx shadcn@latest create --preset \"https://ui.shadcn.com/init?base=radix&style=nova&baseColor=gray&theme=blue&iconLibrary=tabler&font=inter&menuAccent=subtle&menuColor=default&radius=default&template=next&rtl=false\" --template next",
