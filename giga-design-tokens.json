  },
  "colors": {
    "primary": { "50":"#eaf2ff","100":"#d4e5ff","200":"#bfd7ff","300":"#a9caff","400":"#7eb0ff","500":"#5495ff","600":"#277aff","700":"#0050e6","800":"#002d9c","900":"#002d76","_base":"600" },
    "grey": { "50":"#fafafa","100":"#f4f4f4","200":"#e9e9e9","300":"#dfdfdf","400":"#cacaca","500":"#989898","600":"#6f6f6f","700":"#525252","800":"#393939","900":"#161616","950":"#161616" },
    "base": { "black":"#000000","white":"#ffffff" },
    "connectivity": {
      "green": { "50":"#d6ffe9","100":"#adffd2","200":"#85ffbc","300":"#5cffa5","400":"#33ff8f","500":"#0aff78","600":"#00d661","700":"#00b853","800":"#008f40","900":"#00662e","_base":"600" },
      "yellow": { "base":"#ffc93d" },
      "red": { "base":"#ed1c24" }
    }
  },
  "semanticColors": {
    "light": {
      "text": { "primary":"grey.950","secondary":"grey.600" },
      "icon": { "primary":"grey.950","secondary":"grey.600" },
      "status": { "connected":"green.600","notConnected":"red.base" },
      "background": { "main":"white" },
      "border": { "default":"grey.200","light":"grey.100" },
      "button": { "primary":{"fill":"primary.600","hover":"primary.700","text":"white"},"secondary":{"outline":"primary.600","hover":"primary.700"} },
      "link": { "primary":"primary.600","secondary":"underline" }
